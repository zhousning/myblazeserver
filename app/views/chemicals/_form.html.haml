.container-fluid
  .row.justify-content-sm-center
    .col-sm-12
      = form_for @chemical, :url => "/chemicals/#{@chemical.id ? idencode(@chemical.id) : ''}", :builder => WebsiteFormBuilder, :html => {:'data-parsley-validate' => true} do |f|
        - if @chemical.errors.any?
          #error_explanation.alert.alert-danger.alert-dismissible.fade.show
            %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
              %span{"aria-hidden" => "true"} x 
            %h2= "#{pluralize(@chemical.errors.count, "error")} prohibited this buyer from being saved:"
            %ul
              - @chemical.errors.full_messages.each do |msg|
                %li= msg
      
        .form-group.row
          = f.label Setting.chemicals.name, :class => "col-sm-3 col-form-label text-right"
          .col-sm-6
            = f.text_field :name, :class => "form-control rounded-0" , :required => true
          
        .form-group.row
          = f.label Setting.chemicals.unprice, :class => "col-sm-3 col-form-label text-right"
          .col-sm-6
            = f.number_field :unprice, :class => "form-control rounded-0", :step => "any"  , :required => true
          
        .form-group.row
          = f.label Setting.chemicals.cmptc, :class => "col-sm-3 col-form-label text-right"
          .col-sm-6
            = f.number_field :cmptc, :class => "form-control rounded-0", :step => "any"  , :required => true
          
        .form-group.row
          = f.label Setting.chemicals.dosptc, :class => "col-sm-3 col-form-label text-right"
          .col-sm-6
            = f.number_field :dosptc, :class => "form-control rounded-0", :step => "any"  , :required => true
          
        .form-group.row
          = f.label Setting.chemicals.per_cost, :class => "col-sm-3 col-form-label text-right"
          .col-sm-6
            = f.number_field :per_cost, :class => "form-control rounded-0", :step => "any"  , :required => true
          
      
      
      
      
      
        .form-group.row
          .col-3.offset-3
            = f.submit '保存', :class => "button  button-small button-action"
        -#
          .col-3.offset-1
            = link_to '返回', chemicals_path, :class => "button button-small  button-caution"
