- provide(:title, t('.title'))

.container-fluid
  .row
    = render "layouts/control_sidebar"
    %main.col-md-11.ml-sm-auto.col-lg-11.p-3{:role => "main"}
      - content_for :card_header do
        %h5
          = fa_icon "newspaper-o", text: t(controller_name + "." + action_name + '.title')
          = link_to "/#{controller_name}", :class => "button button-small  pull-right button-primary" do
            = fa_icon " chevron-left", text: Setting.systems.btn_back, right: false 
      - content_for :card_body do
        .container-fluid
          .row
            .col-md-8.offset-2
              .card-body
                .container-fluid
                  .row
                  
                    .col-md-6.mb-3.mr-3
                      = Setting.inf_qlties.bod
                      = @inf_qlty.bod
                  
                    .col-md-6.mb-3.mr-3
                      = Setting.inf_qlties.cod
                      = @inf_qlty.cod
                  
                    .col-md-6.mb-3.mr-3
                      = Setting.inf_qlties.ss
                      = @inf_qlty.ss
                  
                    .col-md-6.mb-3.mr-3
                      = Setting.inf_qlties.nhn
                      = @inf_qlty.nhn
                  
                    .col-md-6.mb-3.mr-3
                      = Setting.inf_qlties.tn
                      = @inf_qlty.tn
                  
                    .col-md-6.mb-3.mr-3
                      = Setting.inf_qlties.tp
                      = @inf_qlty.tp
                  
                    .col-md-6.mb-3.mr-3
                      = Setting.inf_qlties.ph
                      = @inf_qlty.ph
                  
                  .row
                  
                  .row
                  
                  .row
                  
                  
                  .row
                  
      = render "layouts/bootstrap/card"
