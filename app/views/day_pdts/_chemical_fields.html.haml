.nested-fields.mt-2
  .form-group
    .field.d-inline
      .card.border-0.mb-3.rounded-0
        .card-header.bg-transparent.border-warning
          %h5
            6 
            = Setting.chemicals.label
            %span.text-danger
              (PAM药剂浓度为固体药剂溶解后浓度)
            = link_to_remove_association "删除", f, :class => "btn btn-danger btn-sm d-inline pull-right"
        .card-body
          %table.w-100.table-bordered.day-pdt-table.ml-2
            %tbody
              %tr
                %td.p-2.text-center
                  = f.label Setting.chemicals.name, :class => "text-center"
                %td.p-2.text-center
                  = f.select :name, options_for_chemicals, {:include_blank=>false}, {:class=>"form-control"}
                %td.p-2.text-center
                  = f.label Setting.chemicals.unprice, :class => "text-center"
                %td.p-2.text-center
                  =f.number_field :unprice, :class => "form-control rounded-0", :step => "any"  , :required => true
                %td.p-2.text-center
                  = f.label Setting.chemicals.cmptc, :class => "text-center"
                %td.p-2.text-center
                  =f.number_field :cmptc, :class => "form-control rounded-0", :step => "any", :required => true

              %tr
                %td.p-2.text-center
                  = f.label Setting.chemicals.dosage, :class => "text-center"
                %td.p-2.text-center
                  =f.number_field :dosage, :class => "form-control rounded-0", :step => "any", :required => true
                %td.p-2.text-center{:colspan => '4'}
