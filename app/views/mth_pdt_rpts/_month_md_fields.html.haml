.card.border-0.mb-3.rounded-0
  .card-header.bg-transparent.border-info
    %h5
      10 
      = Setting.month_mds.label
  .card-body
    %table.w-100.table-bordered.day-pdt-table
      %caption.text-center
      %tbody
        %tr
          %td.p-2.text-center
            = f.label nil, Setting.month_mds.mdrcy, :class => " text-right"
          %td.p-2.text-center
            = f.number_field :mdrcy, :class => "form-control", :disabled => true, :required => true 
            
          %td.p-2.text-center
            = f.label nil, Setting.month_mds.end_mdrcy, :class => " text-right"
          %td.p-2.text-center
            = f.number_field :end_mdrcy, :class => "form-control", :disabled => true, :required => true 
            
        %tr
          %td.p-2.text-center
            = f.label nil, Setting.month_mds.mdsell, :class => " text-right"
          %td.p-2.text-center
            = f.number_field :mdsell, :class => "form-control", :disabled => true, :required => true 
            
          %td.p-2.text-center
            = f.label nil, Setting.month_mds.end_mdsell, :class => " text-right"
          %td.p-2.text-center
            = f.number_field :end_mdsell, :class => "form-control", :disabled => true, :required => true 
            
        %tr
          %td.p-2.text-center
            = f.label nil, Setting.month_mds.yoy_mdrcy, :class => " text-right"
          %td.p-2.text-center
            = f.number_field :yoy_mdrcy, :class => "form-control", :disabled => true
            
          %td.p-2.text-center
            = f.label nil, Setting.month_mds.mom_mdrcy, :class => " text-right"
          %td.p-2.text-center
            = f.number_field :mom_mdrcy, :class => "form-control", :disabled => true
            
        -#
          %tr
          %td.p-2.text-center
            = f.label nil, Setting.month_mds.ypdr_mdrcy, :class => " text-right"
          %td.p-2.text-center
            = f.number_field :ypdr_mdrcy, :class => "form-control border-danger"
          %td.p-2.text-center{:colspan => '2'}
            
        %tr
          %td.p-2.text-center
            = f.label nil, Setting.month_mds.yoy_mdsell, :class => " text-right"
